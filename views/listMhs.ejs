<%- include('partials/head') %>
    <%- include('partials/navbar') %>
        <div class="container mt-5">
            <h3 class="mb-3">Daftar Mahasiswa</h3>
            <div class="button-container d-flex justify-content-space-between align-items-center">
                <form action="/deleteAll?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger mb-2">Delete All</button>
                </form>
                <button class="btn btn-primary ms-3" onclick="location.href='/form'">Add Data</button>
            </div>



            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nama</th>
                            <th>Umur</th>
                            <th>Pekerjaan</th>
                            <th>Alamat</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (c of mhs) { %>
                            <tr>
                                <td>
                                    <%= c.nama %>
                                </td>
                                <td>
                                    <%= c.umur %>
                                </td>
                                <td>
                                    <%= c.pekerjaan %>
                                </td>
                                <td>
                                    <%= c.alamat %>
                                </td>
                                <td>
                                    <a href="mahasiswa/<%= c.id %>" class="btn btn-success mr-2">Detail</a>
                                    <a href="edit/<%= c.id %>/edit" class="btn btn-warning mr-2">Edit</a>
                                    <form class="d-inline" action="/deleteOne/<%= c._id %>?_method=DELETE"
                                        method="POST">
                                        <button type="submit" class="btn btn-danger mb-2">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>



        <%- include('partials/footer') %>